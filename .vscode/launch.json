{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug",
			"type": "node",
			"request": "launch",
			"smartStep": false,
			"program": "${workspaceRoot}/src/index.ts",
			"stopOnEntry": false,
			"preLaunchTask": "compile-ts",
			"args": [],
			"cwd": "${workspaceRoot}",
			"runtimeExecutable": null,
			"runtimeArgs": [],
			"env": {
				"VULCAIN_ENV": "<%= env %>",				
				"VULCAIN_SERVICE_NAME": "<%= project.fullName %>",
				"VULCAIN_SERVICE_VERSION": "1.0",
				"VULCAIN_SERVER": "<%= configServer %>",
                		"VULCAIN_TOKEN": "<%= configToken %>",	
			},
			"console": "internalConsole",
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/dist/**/*.js"
			]
		},
		{
			"name": "Test",
			"type": "node",
			"request": "launch",
			"smartStep": true,
			"stopOnEntry": false,
			"cwd": "${workspaceRoot}",
			"runtimeExecutable": "npm",
			"windows": {
				"runtimeExecutable": "npm.cmd"
			},
			"runtimeArgs": [
				"run-script",
				"test"
			],
			"env": {
				"VULCAIN_ENV": "<%= env %>",				
				"VULCAIN_SERVICE_NAME": "<%= project.fullName %>",
				"VULCAIN_SERVICE_VERSION": "1.0"
			},
			"console": "internalConsole",
			"sourceMaps": true,
			"outFiles": [
				"${workspaceRoot}/dist-test/**/*.js",
				"${workspaceRoot}/dist/**/*.js"
			]
		},
		{
			"name": "Attach",
			"type": "node",
			"request": "attach",
			"port": 5858
		}
	]
}
